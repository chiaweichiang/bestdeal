<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/mainback">

    <EditText
        android:id="@+id/first_email_editText"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail Address"
        android:inputType="textEmailAddress"
        android:gravity="center|bottom"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="290dp"
        android:textColorHint="#ff050505">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/first_password_editText"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:gravity="center"
        android:password="true"
        android:layout_marginTop="10dp"
        android:textColorHint="#ff000000" />

    <Button
        android:id="@+id/first_login_button"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:onClick="Login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#4A79BE"
        android:textColor="#fffffdfb" />

    <Button
        android:id="@+id/first_no_button"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:text="No, thanks"
        android:onClick="Nothanks"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#439C36"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/first_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="#ffffffff"
        android:onClick="Signup"
        android:text="Signup" />

</LinearLayout>